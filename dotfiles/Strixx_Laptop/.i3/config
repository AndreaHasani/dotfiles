for_window [window_role="Preferences"] floating enable
for_window [window_role="browser"] move container to workspace $ws3

# Type
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

#Title
for_window [title="Set password for your browser"] floating enable
for_window [title="Library"] floating enable, resize set 800 600, move position center


#Class
