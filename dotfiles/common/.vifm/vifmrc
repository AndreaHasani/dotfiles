" Basic Settings

colorscheme solarized-dark
set statusline="  %t%= %A %10u:%-7g %15s %20d  "
set rulerformat="%=%2l-%S"
set slowfs=curlftpfs
:only
set suggestoptions="normal,visual,view,keys,foldsubkeys"
set ic
set tm=5000
set viewcolumns=-{name},5%{size},10{uname},15{ctime}
set rnu
set dotfiles
set nu

" Set highlighting
highlight CurrLine cterm=bold,reverse ctermfg=white ctermbg=bold,reverse
